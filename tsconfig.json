{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "."
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "**/*.config.*",
    "**/test.*",
    "test"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
